@model IEnumerable<ShopDungCuTheThao.Models.SanPham>
<div class="position-relative">
    <h3 style="font-family: Arial, sans-serif; font-size: 24px; color: #333;text-align:center">@ViewBag.CatName</h3>
    <hr style="border-color:red; border-width: 1px; opacity: 0.5">
</div>
@foreach (var pro in Model)
{
    <div class="product-cols ">
        <div class="product-block">
            <div class="thumbnail-item">
                <a href="https://www.thethaothientruong.vn/dung-cu-the-hinh/gian-tap-ta/gia-de-ta.html" title="Giá để tạ">
                    <span class="product-sale-percent">-16%</span>
                    <img alt="Giá để tạ" title="Giá để tạ" class="lazy" data-original="https://www.thethaothientruong.vn/uploads/thumbs/gia-de-ta.jpg" width="250" height="208" src="~/Public/img/@pro.IMG" style="display: inline;">
                </a>
            </div>
            <div class="product-meta">
                <div class="product-name">
                    <h3 class="name"><a href="" title="Giá để tạ">@pro.Name</a></h3>
                    <div class="stars"><div class="ratings"><div class="empty-stars"></div><div class="full-stars" style="width:100%"></div></div> (1 đánh giá)</div>
                    <div class="price"><span class="price-old">@pro.Price</span>  <span class="price-new">@pro.Price</span></div>
                </div>
            </div>
        </div>
    </div>
}
