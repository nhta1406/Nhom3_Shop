@model IEnumerable<ShopDungCuTheThao.Models.LoaiSanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
    <style>
        body .container {
            width: 1400px;
            margin: auto;
        }

            body .container .col-lg-3 {
                width: 15%;
            }

            body .container .col-lg-9 {
                width: 85%;
            }
    </style>
}
<body>
    <div class="container"style="padding-top:10px">
        <div class="row" style="width:1305px">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <ul class="list-group">
                    <li class="list-group-item active" style="font-weight:bold; text-align:center">Loại Sản Phẩm</li>
                    @Html.Action("CategoryName", "TrangChu")
                </ul>
                <ul class="list-group">
                    <li class="list-group-item active" style="font-weight:bold; text-align:center">Sản Phẩm</li>
                    @Html.Action("ProductName","TrangChu")
                </ul>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 " style="background-color: lightgrey;">
                @foreach (var pro in Model)
                {
                    <div class="row" >
                        <div class="col-lg-12 bg-white">
                            @Html.Action("ProductHome", "TrangChu", new { catid = pro.ID, namecat = pro.Name })
                        </div>
                    </div>
                    <br />
                }
            </div>
        </div>
    </div>
</body>