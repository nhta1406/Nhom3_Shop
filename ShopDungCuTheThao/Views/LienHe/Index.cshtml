                    <input type="email" id="email" name="email" required placeholder="Email *"> <br />
                    <br />
                    <textarea id="message" name="message" required placeholder="Nội Dung*"></textarea> <br />
                    <br />
                    <button type="submit" id="gui" class="submit-button">
                        <span class="fas fa-paper-plane"></span>
