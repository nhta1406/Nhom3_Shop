
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/Public/css/cssAdmin.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/fontawesome.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <style>
        body header {
            margin: auto;
        }

        body .container {
            width: 1500px;
        }

            body .container content {
                display: flex;
                background-color: white;
                border-radius: 7px;
                height: 750px;
            }

            body .container .content-left {
                flex: 50%;
                position: relative;
                left: 20px;
                top: 15px;
            }

            body .container .content-right {
                flex: 50%;
            }

                body .container .content-right #name, #phone, #email {
                    width: 600px;
                    height: 50px;
                    border-radius: 5px;
                }

                body .container .content-right #message {
                    width: 600px;
                    height: 200px;
                    border-radius: 5px;
                }

                body .container .content-right #gui {
                    background-color: tomato;
                    width: 80px;
                    height: 50px;
                    border-radius: 5px;
                }

        .top-navbar {
            background-color: #e52222;
            padding: 10px;

        }

            .top-navbar ul {
                list-style: none;
                margin: 0;
                padding: 0;
                display: flex;
                justify-content: flex-end;
            }

            .top-navbar li {
                margin-right: 10px;
            }

            .top-navbar a {
                color: #333;
                text-decoration: none;
                height: 50px;
            }

        .navbar-brand {
            margin-right: auto;
        }

            .navbar-brand svg {
                width: 20px;
                height: 20px;
            }

        .navbar-form {
            position: absolute;
            right: 50%;
            transform: translateX(50%);
        }

            .navbar-form .form-group {
                margin-bottom: 0;
            }

            .navbar-form .form-control {
                width: 700px;
            }
    </style>

    <style>
        .top-navbar {
            position: sticky;
            top: 0;
            z-index: 99;
        }

        .navbar-fixed-top {
            position: sticky;
            top: 70px;
            z-index: 98;
        }

    </style>

</head>
<body style="background-color:gainsboro">
    
    <div style="clear: both;"></div>
    <div class="container">
        <header>
            <h5>Trang Chủ / Liên Hệ Với Thể Thao Thiên Trường Để Được Tư Vấn Miễn Phí !</h5>
