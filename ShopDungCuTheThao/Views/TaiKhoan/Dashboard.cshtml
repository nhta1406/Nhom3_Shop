    <style>

        .top-navbar {
            background-color: #e52222;
            padding: 10px;
        }

            .top-navbar ul {
                list-style: none;
                margin: 0;
                padding: 0;
                display: flex;
                justify-content: flex-end;
            }

            .top-navbar li {
                margin-right: 10px;
            }

            .top-navbar a {
                color: #333;
                text-decoration: none;
                height: 50px;
            }

        .navbar-brand {
            margin-right: auto;
        }

            .navbar-brand svg {
                width: 20px;
                height: 20px;
            }

        .navbar-form {
            position: absolute;
            right: 50%;
            transform: translateX(50%);
        }

            .navbar-form .form-group {
                margin-bottom: 0;
            }

            .navbar-form .form-control {
                width: 700px;
            }
    </style>
    <style>
        .top-navbar {
            position: sticky;
            top: 0;
            z-index: 99;
        }

        .navbar-fixed-top {
            position: sticky;
            top: 70px;
            z-index: 98;
        }

        body header {
            margin: auto;
        }

        body .container {
            width: 1500px;
        }

        body .container {
            width: 1500px;
        }

            body .container content {
                display: flex;
                border-radius: 7px;
                height: 750px;
                position: relative;
                top: -30px;
            }

            body .container .content-left {
                flex: 20%;
                position: relative;
                left: 20px;
                top: 15px;
            }

            body .container .content-right {
                flex: 80%;
                height: 700px;
                background-color: white;
                text-align: center;
                position: relative;
                left: 20px;
            }

        hr {
            background-color: black;
            border-width: 5px;
        }

        .ct-r-wrapper {
            display: flex;
            flex-wrap: wrap;
        }

        .ct-r-l {
            flex: 60%;
            text-align: right;
        }

        .z {
            position: relative;
            left: -120px;
            opacity: 0.5;
        }

        .c {
            opacity: 0.5;
            padding-top: 20px;
        }

        .ct-r-r {
            flex: 30%;
        }

        #luu {
            background-color: tomato;
            width: 80px;
            height: 50px;
            border-radius: 5px;
            position: relative;
            left: -320px;
        }

        #form {
            height: 600px;
        }

        #name {
            width: 400px;
            height: 35px;
            border-radius: 5px;
        }

        #dob-day, #dob-month, #dob-year {
            width: 100px;
            height: 35px;
            border-radius: 5px;
        }

        #em {
            position: relative;
            left: -230px
        }

        #sdt {
            position: relative;
            left: -365px
        }

        #gt {
            position: relative;
            left: -320px
        }

        strong {
            margin-left: -20px;
        }
    </style>
    <style>
        .center {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .custom-button {
            width: 75px;
            height: 35px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
        }

            .custom-button:hover {
                background-color: #0056b3;
            }

        #image-upload-input {
            display: none;
        }
    </style>
</head>

<body style="background-color:gainsboro">

    <div style="clear: both;"></div>
    <br />
    @using Microsoft.AspNet.Identity
    @{
        var userName = User.Identity.Name;
    }

    <div class="container">
        <content>
            <div class="content-left">
                <h2>
                    <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-person-bounding-box" viewBox="0 0 16 16">
                        <path d="M1.5 1a.5.5 0 0 0-.5.5v3a.5.5 0 0 1-1 0v-3A1.5 1.5 0 0 1 1.5 0h3a.5.5 0 0 1 0 1h-3zM11 .5a.5.5 0 0 1 .5-.5h3A1.5 1.5 0 0 1 16 1.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 1-.5-.5zM.5 11a.5.5 0 0 1 .5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 1 0 1h-3A1.5 1.5 0 0 1 0 14.5v-3a.5.5 0 0 1 .5-.5zm15 0a.5.5 0 0 1 .5.5v3a1.5 1.5 0 0 1-1.5 1.5h-3a.5.5 0 0 1 0-1h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 1 .5-.5z" />
                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm8-9a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    </svg> @userName
                </h2>
                <h4>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                    </svg> <a href="#">Sửa Hồ Sơ</a>
                </h4>
                <hr />
                <h4>
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                    </svg> <a href="#">Tài Khoản Của Tôi</a>
                    <div class="stardust-dropdown stardust-dropdown--open">
                        <div class="stardust-dropdown__item-header">
                        </div>
                        <div class="stardust-dropdown__item-body stardust-dropdown__item-body--open">
                            <div class="Yu7gVR">
                                <a class="FEE-3D" href="@Url.Action("UpdatePassword","TaiKhoan")">
                                    <span class="qyt-aY" style="padding-left:35px">Đổi mật khẩu</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </h4>
                <hr />
                <h4>
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
                        <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                        <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                    </svg> <a href="#">Đơn Mua</a>
                </h4>
            </div>
            <div class="content-right">
                <h3>Hồ Sơ Của Tôi</h3>
                <h4>Quản Lý Thông Tin Hồ Sơ Để Bảo Mật Tài Khoản</h4>
                <hr />
                <div class="ct-r-wrapper">

                    <div class="ct-r-l">
                        <div class="row">
                            @using (Html.BeginForm("UpdateInfo", "TaiKhoan", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()
                                <div class="col-md-4">
                                    <strong>Tên Đăng Nhập:</strong><br /><br /><br />
                                    <strong>Tên:</strong><br /><br />
                                    <strong>Email:</strong><br /><br /><br />
                                    <strong>Phone:</strong><br /><br />
                                </div>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", style = "color:black;background-color:white;height:30px", value = @Session["UserID"] } })<br />
                                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", style = "color:black;background-color:white;height:30px" } })<br />
                                    @if (@Session["Email"] == null)
                                    {
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", style = "color:black;background-color:white;height:30px" } })<br />
                                    }
                                    else
                                    {
                                        <label style="float:left;padding-top:12px">@Session["Email"]</label><br /><br />
                                    }
                                    @if (@Session["Phone"] == null)
                                    {
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", style = "color:black;background-color:white;height:30px" } })<br />
                                    }
                                    else
                                    {
                                        <label style="float:left;padding-top:12px">@Session["Phone"]</label>
                                    }
                                    <br /><br /><br /><br />
                                    <div style="display:flex">
                                        <label for="dob-day">Ngày Sinh</label>
                                        @Html.EditorFor(m => m.Birthday, new { htmlAttributes = new { @class = "datepicker" } })

                                    </div>
                                    <script>
                                        $(function () {
                                            $(".datepicker").datepicker({
                                                dateFormat: "dd/mm/yy"
                                            });
                                        });
                                    </script>
                                </div>
                                <button type="submit" id="luu" class="submit-button">
                                    Lưu
                                </button>
                            }
                        </div>
                    </div>
                    <div class="ct-r-r">
                        <img id="avatar-image" src="~/Public/avatar/@Session["AvatarKH"]" alt="Avatar" width="300" height="300">
                        <br>
                        <br>
                        <div class="center">
                            <label for="image-upload-input" class="custom-button" style="padding-top:7px">Upload</label>
                            <input type="file" id="image-upload-input">
                        </div>
                    </div>
                </div>
            </div>
        </content>
    </div>
    <br />
</body>

</html>
