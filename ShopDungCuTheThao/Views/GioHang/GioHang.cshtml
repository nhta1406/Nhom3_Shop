<body style="background-color:gainsboro;height:1600px">

    <div style="clear: both;"></div>
    <br />
    @{
        decimal totalMoney = 0;
    }
    @if (ViewBag.TongSoLuong == 0)
    {
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="page-view checkout-content">

                    <h1>Giỏ hàng</h1>


                    <div class="entry-content">
                        <div class="alert alert-success fade in alert-dismissable"><a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a><p>Giỏ hàng trống</p></div>


                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="page-view checkout-content">
                    <h1>Giỏ hàng</h1>
                    <div class="entry-content">
                        <form action="https://www.thethaothientruong.vn/cart/update_cart" method="post" accept-charset="utf-8">
                            <table class="cart left" style="width: 100%;">

                                <thead>
                                    <tr>
                                        <td class="text-center">Ảnh</td>
                                        <td class="ta-left hidden-xs">Tên Sản phẩm</td>
                                        <td class="text-center hide-phone">SKU</td>
                                        <td class="ta-right hide-phone">Đơn giá</td>
                                        <td class="text-center" style="width: 100px">Số lượng</td>
                                        <td class="text-right hidden-xs">Thành tiền</td>
                                        <td class="ta-right">Xóa</td>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr class="products">
                                            <td width="1" class="text-center">
                                                <a href="https://www.thethaothientruong.vn/dung-cu-the-hinh/gian-tap-ta/gia-de-ta.html" title="Giá để tạ"><img src="~/Public/img/@item.iIMG" alt="Giá để tạ" width="60px" height="60px"></a>
                                            </td>
                                            <td>
                                                <a href="https://www.thethaothientruong.vn/dung-cu-the-hinh/gian-tap-ta/gia-de-ta.html">@item.iName</a>
                                            </td>
                                            <td class="text-center hidden-xs">GDT</td>
                                            <td class="ta-right hide-phone">
                                                @if (item.iPriceSale == 0)
                                                {
                                                    <span style="float:right">@item.iPrice.ToString("#,##0 đ")</span>

                                                }
                                                else
                                                {
                                                    <span style="float: right">@item.iPriceSale.ToString("#,##0 đ")</span>

                                                }
                                            </td>
                                            <td class="ta-center">
                                                <div class="add-cart" style="display: flex;">
                                                    <input type="text" class="input-text qty text" step="1" min="0" max="" name="cart[1096][qty]" value="@item.iQuantity" title="SL" size="1" inputmode="numeric">
                                                    <input class="plus" type="button" value="+">
                                                    <input class="minus" type="button" value="-">
                                                </div>
                                            </td>
                                            <td class="ta-right hidden-xs">@item.totalMoney.ToString("#,##0 đ")</td>
                                            <td class="ta-right"><a href="https://www.thethaothientruong.vn/cart/remove/4e2545f819e67f0615003dd7e04a6087"><i class="fa fa-trash"></i></a></td>
                                        </tr>
                                    </tbody>
                                }
                                <tfoot>
                                    <tr>
                                        <td colspan="7">
                                            <div class="float-right">
                                                <strong class="price">@string.Format("{0:#,##0} đ", @ViewBag.TongThanhTien)</strong>
                                            </div>
                                            <div class="float-right ta-right" style="padding-right: 25px; font-weight: bold;">
                                                Tổng tiền:
                                            </div>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                            <div class="buttons-cart">
                                <div class="pull-left"><a onclick="window.location='@Url.Action("Index","TrangChu")'" class="btn btn-shopping-cart "><i class="fa fa-arrow-circle-o-left"></i> Tiếp tục mua</a></div>
                                <div class="pull-right">
                                    <button id="btn-update-cart" class="btn btn-shopping-cart" type="submit"><i class="fa fa-refresh"></i> Cập nhật giỏ hàng</button>
                                    <a class="btn btn-shopping-cart continue" href="@Url.Action("Index","Checkout")"><i class="fa fa-shopping-cart"></i> Thanh toán</a>
                                </div>
                                <div class="clear"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

</body>
