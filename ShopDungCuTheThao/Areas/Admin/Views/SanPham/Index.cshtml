@model IEnumerable<ShopDungCuTheThao.Models.ProductCatogory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHome1.cshtml";
    <style>
        .table-hover tbody tr:hover {
            background-color: #f0f0f0;
        }
    </style>
}
@if (TempData["SuccessMessage"] != null)
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            toastr.success('@TempData["SuccessMessage"]');
        });
    </script>
}
@section IndexSanPham {
    <div class="card bg-white">
        <div class="card-header">
            <div class="row">
                <strong class="text-uppercase text-danger text-center">DANH SÁCH SẢN PHẨM</strong>
            </div>
            <div class=" col-md- text-end">
                <a href="@Url.Action("Create","SanPham")" class="btn btn-sm btn-success ">Thêm</a>
                <a href="@Url.Action("Delete","SanPham")" class="btn btn-sm btn-danger">Xóa</a>
            </div>
        </div>
        <div class="card-body p-3">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="width:20px" class="text-center">#</th>
                        <th style="width:20px" class="text-center">ID</th>
                        <th style="width:90px" class="text-center">Tên Sản Phẩm</th>
                        <th style="width:100px" class="text-center">Hình</th>
                        <th style="width:60px" class="text-center">Loại Sản Phẩm</th>
                        <th style="width:40px" class="text-center">Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <input name="checkID" type="checkbox" value="@item.ID" />
                            <td class="text-center">@item.ID</td>
                            <td class="text-center"> @item.CatName</td>
                            <td class="text-center"><img src="~/Public/img/@item.IMG" class="img-fluid" /></td>
                            <td class="text-center">@item.Name</td>
                            <td class="text-center">
                                @if (item.Status == 1)
                                {
                                    <a href="@Url.Action("Status", "SanPham", new {@id=item.ID})" class="btn btn-sm btn-success">
                                        <i class="fas fa-toggle-on"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Status", "SanPham", new {@id=item.ID})" class="btn btn-sm btn-inverse-danger">
                                        <i class="fas fa-toggle-off"></i>
                                    </a>
                                }
                                <a href="@Url.Action("Edit", "SanPham", new { @id = item.ID })" class="btn btn-sm btn-success">
                                    Edit
                                </a>
                                <a href="@Url.Action("Delete", "SanPham", new { @id = item.ID })" class="btn btn-sm btn-success">
                                    Delete
                                </a>
                                <a href="@Url.Action("Details", "SanPham", new { @id = item.ID })" class="btn btn-sm btn-success">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
