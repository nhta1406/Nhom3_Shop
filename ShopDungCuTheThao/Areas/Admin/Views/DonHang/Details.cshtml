@model ShopDungCuTheThao.Models.DonHang
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHome1.cshtml";
    List<ShopDungCuTheThao.Models.ChiTietDonHang> chiTietDonHangs = ViewBag.ChiTiet;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
@section DetailsAdminRoles {
    <div class="row justify-content-center" id="order" >
        <div class="col-xxl-9">
            <div class="card" id="demo" style="background-color:white">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Invoice To</p>
                                    <h5 class="fs-14 mb-0" style="color:black"><span id="invoice-no">@Model.Accounts.Name</span></h5>
                                    <h5 class="fs-14 mb-0" style="color:black"><span id="invoice-no">@Model.Address</span></h5>
                                </div>
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Date</p>
                                    <h5 class="fs-14 mb-0"><span id="invoice-date" style="color:black">@Model.OrderDate</span></h5>
                                </div>
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Payment Status</p>
                                    <span class="badge bg-success-subtle text-success fs-11" id="payment-status">Paid</span>
                                </div>
                                <div class="col-lg-3 col-6">
                                    <p class="text-muted mb-2 text-uppercase fw-semibold">Total</p>
                                    <h5 class="fs-14 mb-0">$<span id="total-amount" style="color:black">@Model.TotalMoney.ToString("#,##0 VNĐ")</span></h5>
                                </div>
                            </div>
                        </div>
                    </div><!--end col-->
                    <div class="col-lg-12">
                        <div class="card-body p-4 border-top border-top-dashed">
                            <div class="row g-3">
                                <div class="col-6">
                                    <p class="text-muted mb-1" id="billing-address-line-1"><strong>Thông Tin Mua Hàng:</strong> #@Model.OrderID </p>
                                    <p class="text-muted mb-1" id="billing-address-line-1"><strong>Ngày Mua Hàng:</strong> @Model.OrderDate</p>
                                    <p class="text-muted mb-1" id="billing-address-line-1"><strong>Trạng Thái Đơn Hàng:</strong> @Model.TransactStatus.Status</span></p>
                                </div>
                            </div>
                        </div>
                        <!--end card-body-->
                    </div><!--end col-->
                    <div class="col-lg-12">
                        <div class="card-body p-4">
                            <div class="table-responsive">
                                <table class="table table-borderless text-center table-nowrap align-middle mb-0">
                                    <thead>
                                        <tr class="table-active">
                                            <th scope="col" style="width: 50px;">No.</th>
                                            <th scope="col">Tên Sản Phẩm</th>
                                            <th scope="col">Thành Tiền</th>
                                            <th scope="col">Số Lượng</th>
                                            <th scope="col" class="text-end">Tổng Tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody id="products-list">
                                        @if (chiTietDonHangs != null && chiTietDonHangs.Count() > 0)
                                        {
                                            int i=1;
                                            foreach (var item in chiTietDonHangs)
                                            {
                                                <tr>
                                                    <th scope="row">@i</th>
                                                    <td class="text-start">
                                                        <span class="fw-medium">@item.SanPham.Name</span>
                                                    </td>
                                                    <td>@item.Price.ToString("#,##0 VNĐ")</td>
                                                    <td>@item.Quantity</td>
                                                    <td class="text-end">@item.Total.ToString("#,##0 VNĐ")</td>
                                                </tr>

                                            }
                                            i++;
                                        }
                                    </tbody>
                                </table><!--end table-->
                            </div>
                            <br />
                            <div class="border-top border-top-dashed mt-2">
                                <table class="table table-borderless table-nowrap align-middle mb-0 ms-auto" style="width:250px">
                                    <tbody>
                                        <tr class="border-top border-top-dashed fs-15">
                                            <th scope="row">Total Amount</th>
                                            <th class="text-end">@Model.TotalMoney.ToString("#,##0 VNĐ")</th>
                                        </tr>
                                    </tbody>
                                </table>
                                <!--end table-->
                            </div>
                        </div>
                        <!--end card-body-->
                    </div><!--end col-->
                </div><!--end row-->
            </div>
            <!--end card-->
        </div>
        <!--end col-->
    </div>
}
</html>


