@model IEnumerable<ShopDungCuTheThao.Models.Accounts>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHome1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        #c{width:}
    </style>
</head>
@section IndexAdminRoles {
    <div class="card">
        <div class="card-header">
            <div class="text-center">
                <strong class="text-uppercase text-danger text-center">DANH SÁCH TÀI KHOẢN</strong>
            </div>
            <div class="col-md-12 text-end">
                <a href="@Url.Action("Create","LoaiSanPham")" class="btn btn-sm btn-success ">Thêm</a>
                <a href="@Url.Action("Delete","LoaiSanPham")" class="btn btn-sm btn-danger">Xóa</a>
            </div>
        </div>
        <div class="card-body p-3 bg-white" id="c">
            <tbody>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Role.RoleName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Password)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Birthday)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Avatar)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Salt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreateAt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Role.RoleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @if(item.Email.Length > 4)
                                 {
                                    <span>@item.Email.Substring(0, 4)...</span> 
                                 }
                                else 
                                { 
                                    @item.Email
                                }
                                @*@Html.DisplayFor(modelItem => item.Email)*@
                            </td>
                            <td>
                                @if (item.Phone.Length > 5)
                                {
                                    <span>@item.Phone.Substring(0, 5)...</span>
                                }
                                else
                                {
                                    @item.Phone
                                }
                                @*@Html.DisplayFor(modelItem => item.Phone)*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @if (item.Password.Length > 3)
                                {
                                    <span>@item.Password.Substring(0, 3)...</span>
                                }
                                else
                                {
                                    @item.Password
                                }
                                @*@Html.DisplayFor(modelItem => item.Password)*@
                            </td>
                            <td>
                                @if (item.Birthday != null)
                                {
                                    var BirthdayAtString = item.CreateAt.ToString();
                                    if (BirthdayAtString.Length > 10)
                                    {
                                        <span>@BirthdayAtString.Substring(0, 10)</span>
                                    }
                                    else
                                    {
                                        @BirthdayAtString
                                    }
                                }
                                @*@Html.DisplayFor(modelItem => item.Birthday)*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Avatar)
                            </td>
                            <td>
                                @if (item.Address != null)
                                {
                                    var AddressAtString = item.CreateAt.ToString();
                                    if (AddressAtString.Length > 5)
                                    {
                                        <span>@AddressAtString.Substring(0, 5)...</span>
                                    }
                                    else
                                    {
                                        @AddressAtString
                                    }
                                }
                                @*@Html.DisplayFor(modelItem => item.Address)*@
                            </td>
                            <td>
                                @if (item.Salt != null)
                                {
                                    var saltString = item.Salt.ToString();
                                    if (saltString.Length > 3)
                                    {
                                        <span>@saltString.Substring(0, 3)...</span>
                                    }
                                    else
                                    {
                                        @saltString
                                    }
                                }
                                @*@Html.DisplayFor(modelItem => item.Salt)*@
                            </td>
                            <td>
                                @if (item.CreateAt != null)
                                {
                                    var CreateAtString = item.CreateAt.ToString();
                                    if (CreateAtString.Length > 10)
                                    {
                                        <span>@CreateAtString.Substring(0, 10)</span>
                                    }
                                    else
                                    {
                                        @CreateAtString
                                    }
                                }
                                @*@Html.DisplayFor(modelItem => item.CreateAt)*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.AccountID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.AccountID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.AccountID })
                            </td>
                        </tr>
                    }
                    
                </table>
            </tbody>
            </div>
            }
</html>
