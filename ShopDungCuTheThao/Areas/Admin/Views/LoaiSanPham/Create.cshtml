@model ShopDungCuTheThao.Models.LoaiSanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHome1.cshtml";
}
@section CreateLoaiSanPham
{
    @using (Html.BeginForm(Html.BeginForm("Create", "LoaiSanPham", FormMethod.Post, new { @enctype = "multipart/form-data" })))
    {
        @Html.AntiForgeryToken()
        <div class="card bg-white">
            <div class="card-header">
                <div class="text-center">
                    <strong class="text-uppercase text-danger text-center">Thêm Loại Sản Phẩm</strong>
                </div>
            </div>
            <div class="card-body p-3 bg-white">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label>Tên Loại Sản Phẩm</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control white-text", style = "color: black; background-color: white;" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label>Chủ Đề Cha</label>
                                    <div class="col-md-5">
                                        @Html.DropDownListFor(model => model.ParentID, (SelectList)ViewBag.ListCat, "Chọn Cấp Cha", new { @class = "form-control white-text", style = "color: black; background-color: white;border: 1px solid black;" })
                                        @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label>Sắp Xếp</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Orders, new { htmlAttributes = new { @class = "form-control white-text", style = "color: black; background-color: white;" } })
                                        @Html.ValidationMessageFor(model => model.Orders, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label>Từ Khóa</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.MetaKey, new { htmlAttributes = new { @class = "form-control white-text", style = "color: black; background-color: white;" } })
                                        @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label>Mô Tả</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.MetaDesc, new { htmlAttributes = new { @class = "form-control white-text", style = "color: black; background-color: white;" } })
                                        @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label>Trạng Thái</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control white-text", style = "color: black; background-color: white;" } })
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-default" style="background-color:black" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
