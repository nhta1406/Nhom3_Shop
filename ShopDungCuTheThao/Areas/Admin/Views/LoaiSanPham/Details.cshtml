@model ShopDungCuTheThao.Models.LoaiSanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHomecshtml.cshtml";
}
@section DetailsLoaiSanPham {
