                    </tr>
                    <tr>
                        <th>
                            Cập Nhật Lúc
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.UpdateAt)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Tình Trạng
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Status)
                        </td>
                    </tr>
                </table>

                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>
            </div>
            </div>
