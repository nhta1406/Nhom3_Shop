            </div>
        </div>
        <div class="card-body p-3 bg-white">
            <div class="card-body p-3 bg-white">
                <table class="table">
                    <tr>
                        <th>
                            Tên Loại Sản Phẩm
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            ID
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.ParentID)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Thứ Tự
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Orders)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            TỪ KHÓA
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.MetaKey)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Mô Tả Loại Sản Phẩm
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.MetaDesc)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Tạo Bởi
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.CreateBy)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Slug)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Slug)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Tạo Vào Lúc
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.CreateAt)
