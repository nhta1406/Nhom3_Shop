@model IEnumerable<ShopDungCuTheThao.Models.Roles>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHome1.cshtml";
}
@if (TempData["SuccessMessage"] != null)
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            toastr.success('@TempData["SuccessMessage"]');
        });
    </script>
}
@section Index {

    <div class="card bg-white">
        <div class="card-header">
            <div class="text-center">
                <strong class="text-uppercase text-danger text-center">DANH SÁCH Quyền</strong>
            </div>
            <div class="col-md-12 text-end">
                <a href="@Url.Action("Create","AdminRoles")" class="btn btn-sm btn-success ">Thêm</a>
                <a href="@Url.Action("Delete","LoaiSanPham")" class="btn btn-sm btn-danger">Xóa</a>
            </div>
        </div>
        <div class="card-body p-3 bg-white">
            <table class="table table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RoleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Decripstion)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Decripstion)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.RoleID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.RoleID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.RoleID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
}
