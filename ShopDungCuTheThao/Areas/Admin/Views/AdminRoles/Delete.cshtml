@model ShopDungCuTheThao.Models.Roles

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHome1.cshtml";
    <style>
        th,td{
            background-color:white
        }
    </style>
}

@section Index {
    <div class="card bg-white">
        <div class="card-header">
            <div class="text-center">
                <strong class="text-uppercase text-danger text-center">DANH SÁCH Quyền</strong>
            </div>
            <div class="col-md-12 text-end">
                <a href="@Url.Action("Create","LoaiSanPham")" class="btn btn-sm btn-success ">Thêm</a>
                <a href="@Url.Action("Delete","LoaiSanPham")" class="btn btn-sm btn-danger">Xóa</a>
            </div>
        </div>
        <div class="card-body p-3 bg-white">
            <div>
                <table class="table table-striped">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.RoleName)</th>
                        <td>@Html.DisplayFor(model => model.RoleName)</td>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Decripstion)
                        </th>
                        <td>@Html.DisplayFor(model => model.Decripstion)</td>
                    </tr>
                </table>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" style="background-color:black"/> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
            </div>
        </div>
    }
